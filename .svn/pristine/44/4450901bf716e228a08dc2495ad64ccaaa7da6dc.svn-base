// {{{ tmpdir()

function tmp_dir()
{
    if (WINDOWS){
        if (my_env('TEMP')) {
            return my_env('TEMP');
        }
        if (my_env('TMP')) {
            return my_env('TMP');
        }
        if (my_env('windir')) {
            return my_env('windir') . '\temp';
        }
        return my_env('SystemRoot') . '\temp';
    }
    if (my_env('TMPDIR')) {
        return my_env('TMPDIR');
    }
    return '/tmp';
}

