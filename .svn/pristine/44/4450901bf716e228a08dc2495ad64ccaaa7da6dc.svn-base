// {{{ mkdir_p()

function mkdir_p($dir, $mode = 0777)
{
    $lastdir = '';
    if (@is_dir($dir)) {
        return true;
    }
    $parent = dirname($dir);
    $parent_exists = (int)@is_dir($parent);
    $ok = true;
    if (!@is_dir($parent) && $parent != $dir) {
        $ok = mkdir_p(dirname($dir), $mode);
    }
    if ($ok) {
        $ok = @mkdir($dir, $mode);
        if (!$ok) {
            print "mkdir failed: $dir\n";
        }
    }
    return $ok;
}

