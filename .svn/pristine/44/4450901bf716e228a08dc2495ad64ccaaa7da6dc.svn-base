// {{{ bail()

function bail($msg = '')
{
    global $ptmp, $origpwd;
    if ($ptmp && is_dir($ptmp)) {
        chdir($origpwd);
        rm_rf($ptmp);
    }
    if ($msg) {
        die($msg);
    }
}

